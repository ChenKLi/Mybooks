
<%=flash[:notice]%>
<h1>Book List</h1>

<%= link_to "Create Book", new_book_path%>

<ul>

  <% @books.each do |book| %>
    <li>
      <%= link_to book.name , book_path(book)%>
      <%= link_to "edit",edit_book_path(book)%>
      <%= button_to "delete", book_path(book), method: "delete" , data:{confirm: "are you sure?"}%>
    </li>
  <% end %>


</ul>